{
  "name": "startup-exit-calculator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Startup Exit Value Calculator - Compare tax implications of exits between Canada (LCGE) and USA (QSBS)",
  "scripts": {
    "dev": "bun --bun vite",
    "build": "bun run tsc -b && bun --bun vite build && bun run postbuild",
    "postbuild": "mkdir -p dist-server/exit-tax-calculator && cp -r dist/* dist-server/exit-tax-calculator/ && echo 'Build complete! Files ready for deployment at /exit-tax-calculator'",
    "lint": "bun run eslint .",
    "preview": "bun --bun vite preview"
  },
  "dependencies": {
    "@number-flow/react": "^0.5.10",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "chart.js": "^4.5.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-number-format": "^5.4.4",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "framer-motion": "^12.23.5",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3"
  }
}
